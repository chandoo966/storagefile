<!DOCTYPE html>
<html>
<head>
  <title>File Storage Repo</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-success text-white">

  <div class="container p-5">
    <h1 class="text-center mb-4">ðŸŒ¿ File Storage Repository</h1>

    <form action="/upload" method="POST" enctype="multipart/form-data" class="mb-5 d-flex gap-2">
      <input class="form-control" type="file" name="file" required>
      <button class="btn btn-light text-success fw-bold">Upload</button>
    </form>

    <div class="row">
      <% files.forEach(file => { %>
        <div class="col-md-4 mb-4">
          <div class="card shadow">
            <div class="card-body bg-white text-dark">
              <p><strong><%= file %></strong></p>
              <a class="btn btn-success btn-sm" href="/uploads/<%= file %>" download>Download</a>
              <form action="/delete" method="POST" class="d-inline">
                <input type="hidden" name="filename" value="<%= file %>">
                <button class="btn btn-danger btn-sm">Delete</button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

</body>
</html>
